    "class Solution:\n",
    "    def numberOfMatches(self, n: int) -> int:\n",
    "        ans = 0\n",
    "        \n",
    "        while n > 1:\n",
    "            ans += n // 2\n",
    "            n = n // 2 + n % 2\n",
    "\n",
    "        return ans\n",
    "        "
   ]
  }
